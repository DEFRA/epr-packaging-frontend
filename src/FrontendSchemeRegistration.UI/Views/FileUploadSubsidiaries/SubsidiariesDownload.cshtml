@{
    ViewData["Title"] = Localizer["PageTitle"];
    var downloadCompleted = TempData["DownloadCompleted"] != null && (bool)TempData["DownloadCompleted"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <partial name="Partials/_FileIsDownloadingStatus" />
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        <a asp-action="subsidiarieslist" class="govuk-link govuk-link--no-visited-state govuk-body-m">
                            @SharedLocalizer["link-go-back-to-subsidiaries-list"]
                        </a>
                    </div>
                </div>
                @if (!downloadCompleted)
                {
                    <meta http-equiv="refresh" content="0; url='/report-data/subsidiaries-export'" />
                }
            </div>
        </div>
    </main>
</div>
