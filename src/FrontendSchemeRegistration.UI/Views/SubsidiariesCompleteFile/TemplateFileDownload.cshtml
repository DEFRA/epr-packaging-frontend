@{
    ViewData["Title"] = Localizer["PageTitle"];
    var downloadCompleted = TempData["DownloadCompleted"] != null && (bool)TempData["DownloadCompleted"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <partial name="Partials/_FileIsDownloadingStatus" />
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        @Html.ActionLink(@SharedLocalizer["link-how-to-complete-csv-file"],
                                 "Get",
                                 "SubsidiariesCompleteFile",
                                 null,
                                 new { @class = "govuk-body govuk-link govuk-link--no-visited-state" })
                    </div>
                </div>
                
                @if (!downloadCompleted)
                {
                    <meta http-equiv="refresh" content="0; url='/report-data/subsidiaries-complete-file/template'" />
                }
               
            </div>
        </div>
    </main>
</div>
