@{
    ViewData["Title"] = Localizer["how_to_complete"];
}

<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">@Localizer["how_to_complete"]</h1>

            <p class="govuk-body">@Localizer["enter_the_required_data"]</p>

            <ol class="govuk-list govuk-list--number govuk-list--spaced">
                <li>@Localizer["organisation_id"]</li>
                <li>@Localizer["subsidiary_id"]</li>
                <li>@Localizer["organisation_name"]</li>
                <li>@Localizer["companies_house_number"]</li>
                <li>@Localizer["parent_child"]</li>
                <li>@Localizer["franchisee_licensee_tenant"]</li>
            </ol>

            <p class="govuk-body">@Localizer["if_you_are_entering_data_from_an_organisation_details"]</p>

            <a href="@Url.Action("GetFileUploadTemplate", "SubsidiariesCompleteFile")" class="govuk-button govuk-!-margin-top-4">@Localizer["download_CSV_template"]</a>
        </div>
    </div>
</main>