@using FrontendSchemeRegistration.UI.Controllers.Prns
@using FrontendSchemeRegistration.UI.ViewModels.Prns
@model PrnViewModel

<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            <form class="form" method="POST">
                <input name="Id" type="hidden" value="@Model.Id" />
                <h2 class="govuk-heading-l">@Localizer[(Model.IsPrn ? "prn_heading" : "pern_heading")]</h2>

                <div class="govuk-inset-text">
                    @Localizer["TitleFirstPart"] @Model.Tonnage @Localizer["TitleSecondPart"]
                </div>

                <button class="govuk-button" type="submit" asp-action=@nameof(PrnsController.SetPrnStatusToAccepted) asp-controller="Prns">
                    @Localizer["YesAcceptButton"]
                </button>

                <button class="govuk-button" asp-action="RejectPRN" asp-controller="Prns">
                    @Localizer["NoBackButton"]
                </button>

            </form>
        </div>
    </div>
</main>