@model ComplianceSchemeRegistrationViewModel

@{
    ViewData["Title"] = @Localizer["title"];
}


<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">

        <h1 class="govuk-heading-l">@Localizer["title"]</h1>

        <dl class="govuk-body">
            <dd>@Localizer["cso-label"]:</dd>
            <dt>@Model.ComplianceSchemeName</dt>
            <dd>@Localizer["regulator-label"]:</dd>
            <dt>@Localizer[$"{Model.Nation.ToLowerInvariant()}.regulator"]</dt>
        </dl>
        <h2 class="govuk-heading-m">@Model.CurrentRegistrationYear</h2>

        <div class="govuk-grid-row box-container">
            <div class="govuk-grid-column-one-half box">
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper app-summary-card__title-wrapper--no-background">
                        <h2 class="govuk-summary-card__title">
                            <!-- TODO - use ProducerSize enum instead of hardcoded Small value -->
                            <a asp-controller="RegistrationApplication" asp-action="RegistrationTaskList" asp-route-producersize="Small" asp-route-registrationyear="@Model.CurrentRegistrationYear" class="govuk-link">
                                @string.Format(Localizer["current_small_producer_registration_title"].Value, @Model.CurrentRegistrationYear)
                            </a>
                        </h2>
                    </div>

                    <div class="govuk-summary-card__content">
                        <div class="govuk-summary-card__body">
                            <p class="govuk-body">@Localizer[$"small_producer_instructions1.{Model.CurrentRegistrationYear}"]</p>
                            <p class="govuk-body">@Localizer[$"small_producer_instructions2.{Model.CurrentRegistrationYear}"]</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="govuk-grid-column-one-half box">
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper app-summary-card__title-wrapper--no-background">
                        <h2 class="govuk-summary-card__title">
                            <!-- TODO - use ProducerSize enum instead of hardcoded Large value -->
                            <a asp-controller="RegistrationApplication" asp-action="RegistrationTaskList" asp-route-producersize="Large" asp-route-registrationyear="@Model.CurrentRegistrationYear" class="govuk-link">
                                @string.Format(Localizer["current_large_producer_registration_title"].Value, @Model.CurrentRegistrationYear)
                            </a>
                        </h2>
                    </div>

                    <div class="govuk-summary-card__content">
                        <div class="govuk-summary-card__body">
                            <p class="govuk-body">@Localizer[$"large_producer_instructions1.{Model.CurrentRegistrationYear}"]</p>
                            <p class="govuk-body">@Localizer[$"large_producer_instructions2.{Model.CurrentRegistrationYear}"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="govuk-heading-m">@Model.PreviousRegistrationYear</h2>
        <div class="govuk-grid-row box-container">
                @foreach (var app in Model.RegistrationApplicationsPerYear)
                {
                    if (app.RegistrationYear?.ToString() == @Model.PreviousRegistrationYear.ToString())
                    {
                        <partial name="~/Views/FrontendSchemeRegistration/RegistrationApplicationYearBlock.cshtml" model="app" />
                    }
                }
        </div>
    </main>
</div>