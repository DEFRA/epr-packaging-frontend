@model RegisterYourMembersViewModel

<div class="govuk-grid-column-one-half box" xmlns="http://www.w3.org/1999/html">
    <div class="govuk-card govuk-card--grey govuk-card--border-bottom-blue govuk-!-margin-bottom-7">
        <div class="govuk-card-body">
            <h2 class="govuk-heading-m">
                @Html.ActionLink(
                    // TODO this will need localisation for Wales
                    "Register Your Members", //"Localizer["register_your_members"].Value,
                    "RegistrationSubLanding",
                    "RegistrationApplication",
                    new { RegistrationApplicationPerYearViewModel = "2026", ComplianceSchemeName = Model.ComplianceSchemeSummary.Name, Nation = Model.ComplianceSchemeSummary.Nation },
                    new
                    {
                        @class = "govuk-link--no-visited-state"
                    })
            </h2>
            <p class="govuk-body">
                <!--TODO this will need localisation for Wales -->
                Large and small producers must be registered separately.
                <br/>
                You can also resubmit registration details.
            </p>
        </div>
    </div>
</div>