@model FrontendSchemeRegistration.UI.ViewModels.RegistrationApplication.ProducerRegistrationGuidanceViewModel

@{
    ViewData["Title"] = Localizer["producer_registration_guidance_title"];
    var nationName = Model.NationName.ToLower();
}

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            @if (Model.IsComplianceScheme)
            {
                if (Model.ProducerSize == "large")
                {
                    <span class="govuk-caption-l">@Localizer["large_producer_registration", Model.RegistrationYear]</span>
                }
                else if (Model.ProducerSize == "small")
                {
                    <span class="govuk-caption-l">@Localizer["small_producer_registration", Model.RegistrationYear]</span>
                }
                else
                {
                    throw new InvalidOperationException("Invalid producer size");
                }
            }
            <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
                @if (Model.IsComplianceScheme)
                {
                    @Localizer["scheme_registration_details"]
                }
                else
                {
                    @Localizer["register_company", Model.OrganisationName]
                }
            </h1>
            <div class="govuk-inset-text govuk-!-margin-bottom-4">
                @if (Model.IsComplianceScheme)
                {
                    <p class="govuk-body govuk-!-font-weight-bold">@Localizer["compliance_scheme_x", Model.ComplianceScheme]
                        <br/>@Localizer["regulator"]@Localizer[$"{nationName}.environmental_regulator"]
                    </p>
                }
                else
                {
                    <p class="govuk-body govuk-!-font-weight-bold">@Localizer["organisation_id_x", Model.OrganisationNumber]</p>
                }
            </div>
            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-visually-hidden">Warning</span>
                    @Localizer["ensure_your_packaging_data_for_year_been_reported_before_registering", Model.RegistrationYear - 1]
                </strong>
            </div>
            <p class="govuk-body">
                @Localizer["if_you_are_obligated_under_PRO_2024_you_must_register"]<br/>
                @Localizer["to_apply_for_registration_you_must"]
            </p>

            <ul class="govuk-list govuk-list--bullet">
                <li class="govuk-body">@Localizer["upload_your_organisation_data"]</li>
                <li class="govuk-body">@Localizer["make_payment"]</li>
                <li class="govuk-body">@Localizer["submit_your_application"]</li>
            </ul>
            <p class="govuk-body">@Localizer["you_must_be_approved_or_delegated_person_to_submit_data_complete_registration"]</p>
            <p class="govuk-body govuk-!-margin-bottom-2">
                <a class="govuk-link govuk-link--no-visited-state" rel="noreferrer noopener" target="_blank" href="@GuidanceLinks.Value.ProducerResponsibilitiesForPackagingWaste">@Localizer["more_about_packaging_responsibilities_and_check_need_for_action"]</a>
            </p>

            <a asp-action="RegistrationTaskList" asp-route-registrationyear="@Model.RegistrationYear" asp-route-producersize="@Model.ProducerSize" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                @SharedLocalizer["continue"]
            </a>
        </div>
    </div>
</main>
