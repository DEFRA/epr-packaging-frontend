@{
    ViewData["Title"] = Localizer["timeout_signed_out_title"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
                @Localizer["you_have_been_signed_out"]
            </h1>

            <p class="govuk-body govuk-!-margin-bottom-4">
                @Localizer["you_have_been_signed_out_reason"]
            </p>

            <a class="govuk-button" data-module="govuk-button" asp-controller="Account" asp-action="SignIn">
                @Localizer["sign_back_in"]
            </a>
        </div>
    </main>
</div>